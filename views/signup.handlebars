<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Benne&family=Quicksand&display=swap" rel="stylesheet">

<style>
  body {
    font-family: 'Benne', serif;
    font-family: 'Quicksand', sans-serif;
  }
</style>

<div class="card bg-dark shadow" style="width: 20rem; height: 60vh; text-align: center;color: white;">
  <h2 class="title pb-4 mt-4 ms-2">Create Account:</h2><hr>
  <form class="signup-form">
    <div class="card text-white bg-primary mb-3 ms-3" style="max-width: 18rem;">
      <label for="username-signup" class="ms-2">Username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div class="card text-white bg-primary mb-3 ms-3" style="max-width: 18rem;">
      <label for="email-signup" class="ms-2">Email:</label>
      <input type="text" id="email-signup" />
    </div>
    <div class="card text-white bg-primary mb-3 ms-3" style="max-width: 18rem;">
      <label for="password-signup" class="ms-2">Password:</label>
      <input type="password" id="password-signup" />
    </div>
    <button type="submit" class="btn-primary  ms-2 p-1 rounded" style="width: 100px;">Signup</button>
  </form>
</div>

<!-- javascript file-->
<script src="/javascript/signup.js"></script>